{
  "manifest_version": 3,
  "name": "CounselReflect",
  "version": "0.0.1",
  "description": "Mental Health Conversation Analytics - Evaluate therapeutic conversations with AI-powered metrics",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "https://api.counselreflect.com/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Toggle CounselReflect Sidebar",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://gemini.google.com/*",
        "*://chatgpt.com/*",
        "*://claude.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "assets/*",
        "icons/*"
      ],
      "matches": [
        "*://gemini.google.com/*",
        "*://chatgpt.com/*",
        "*://claude.ai/*"
      ]
    }
  ]
}
